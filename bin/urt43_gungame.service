# 30plus UrT systemd service file

[Unit]
Description=UrT 4.3 Gun Game
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
Type=forking
User=urtadmin
Group=urtadmin
PIDFile=/game/run/urt43_gungame.pid
ExecStart=/game/bin/start_urt_gungame.sh
ExecStop=/game/bin/stop_urt_gungame.sh
TimeoutSec=600
Restart=on-failure
LimitNOFILE=5000
