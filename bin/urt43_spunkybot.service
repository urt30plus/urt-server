# 30plus Spunkybot systemd service file

[Unit]
Description=UrT 4.3 Spunkybot
After=network.target urt43_game.service

[Install]
WantedBy=multi-user.target

[Service]
User=urtadmin
Group=urtadmin
PIDFile=/game/run/spunkybot.pid
ExecStart=/game/bin/start_spunkybot.sh
ExecStop=/game/bin/stop_spunkybot.sh
TimeoutSec=600
Restart=on-failure
LimitNOFILE=5000
StandardOutput=null
Type=simple
